    "activityBar.background": "#8458c2",
    "titleBar.activeBackground": "#8458c2",
    "titleBar.activeForeground": "#EEFDF6"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
