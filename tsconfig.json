{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "typeRoots": ["src"],
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": ["node_modules", "sandbox", "test", "dist"],
  "include": ["src", "index.d.ts"]
}